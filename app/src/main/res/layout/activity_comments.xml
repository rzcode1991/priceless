<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    tools:context=".CommentsActivity"
    android:layout_marginBottom="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_post_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/iv_profile_post_item_comments"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="4dp"
                        android:layout_gravity="start|top"
                        android:src="@drawable/ic_baseline_account_circle_24"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tv_user_name_post_item_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:text="UserName"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimaryDark"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_post_content_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_post_content_comments"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="post content"
                        android:textSize="20sp"
                        android:padding="4dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="4dp"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/iv_post_image_comments"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:visibility="gone"
                        android:src="@drawable/white_image_background"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_buy_post_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_price_to_buy_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimaryText"/>

                    <Button
                        android:id="@+id/btn_go_to_buy_comments"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="@color/white"
                        android:text="Buy"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tv_time_to_share_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Or It Will Be Visible At:"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimaryText"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_priceless_post_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Priceless"
                    android:textSize="30sp"
                    android:layout_marginBottom="4dp"
                    android:visibility="gone"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_gravity="center"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="4dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="start|bottom"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/tv_time_created_post_item_comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time Created"
                            android:layout_gravity="start|center"
                            android:layout_marginBottom="4dp"
                            android:textSize="12sp"
                            android:textColor="#5E5A5A"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/tv_priceless_comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Priceless"
                            android:layout_gravity="start|center"
                            android:layout_marginTop="2dp"
                            android:textSize="12sp"
                            android:visibility="gone"
                            android:textColor="#5E5A5A"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/tv_price_comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:layout_gravity="start|center"
                            android:layout_marginTop="2dp"
                            android:textSize="12sp"
                            android:visibility="gone"
                            android:textColor="#5E5A5A"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_likes_of_post_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:visibility="gone"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="2dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <ImageButton
                        android:id="@+id/ib_like_post_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:layout_marginEnd="20dp"
                        android:background="@color/white"
                        android:src="@drawable/thumb_like"
                        tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp"
            android:background="@drawable/main_edit_text_bg">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_new_comment"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:gravity="start|top"
                android:padding="10dp"
                android:textSize="20sp"
                android:textColor="#2b2d42"
                android:inputType="textMultiLine"
                android:hint="new comment"
                android:background="@drawable/main_edit_text_bg"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/ib_add_photo_to_comment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_add_photo_alternate_24"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginEnd="4dp">

            <ImageButton
                android:id="@+id/ib_remove_comment_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_remove_24"
                android:layout_gravity="end|bottom"
                android:visibility="gone"
                android:background="@color/white"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/iv_comment_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="end"
                android:visibility="gone"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp"
            android:gravity="end">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center">

                <CheckBox
                    android:id="@+id/cb_private_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Private Comment?"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <Button
                android:id="@+id/send_comment"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:backgroundTint="@color/white"
                android:text="send"
                android:layout_marginEnd="4dp"
                android:textColor="@color/black"
                android:textAllCaps="false"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:visibility="gone"
            tools:listitem="@layout/comment_item"/>

        <ProgressBar
            android:id="@+id/pb_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:visibility="visible"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>