<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/iv_profile_pic_sold_post_item"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_gravity="start|top"
                android:src="@drawable/ic_baseline_account_circle_24"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_user_name_sold_post_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text="UserName"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_post_content_sold_post_item"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="post content"
                android:textSize="20sp"
                android:padding="4dp"
                android:textColor="@color/black"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/iv_post_image_sold_post_item"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:visibility="gone"
                android:src="@drawable/white_image_background"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="start|bottom"
                android:gravity="start">

                <TextView
                    android:id="@+id/tv_time_created_sold_post_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Created"
                    android:layout_gravity="start|center"
                    android:layout_marginBottom="4dp"
                    android:textSize="12sp"
                    android:textColor="#5E5A5A"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_price_sold_post_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TON"
                    android:layout_gravity="start|center"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:textColor="#5E5A5A"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="end|bottom"
                android:gravity="end">

                <TextView
                    android:id="@+id/tv_buyer_sold_post_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:visibility="gone"
                    android:textColor="#5E5A5A"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>