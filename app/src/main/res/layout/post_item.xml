<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/iv_profile_post_item"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_gravity="start|top"
                    android:src="@drawable/ic_baseline_account_circle_24"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_user_name_post_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:text="UserName"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimaryDark"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_post_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_post_content_post_item"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="post content"
                    android:textSize="20sp"
                    android:padding="4dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/iv_post_image_post_item"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:visibility="gone"
                    android:src="@drawable/white_image_background"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_buy_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_price_to_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryText"/>

                <Button
                    android:id="@+id/btn_go_to_buy"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/white"
                    android:text="Buy"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_time_to_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Or It Will Be Visible At:"
                    android:textSize="15sp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/colorPrimaryText"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_priceless_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priceless"
                android:textSize="30sp"
                android:visibility="gone"
                android:layout_marginBottom="4dp"
                android:textColor="@color/colorPrimaryText"
                android:layout_gravity="center"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="4dp"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="start|bottom"
                    android:gravity="start">

                    <TextView
                        android:id="@+id/tv_time_created_post_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time Created"
                        android:layout_gravity="start|center"
                        android:layout_marginBottom="4dp"
                        android:textSize="12sp"
                        android:textColor="#5E5A5A"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tv_priceless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Priceless"
                        android:layout_gravity="start|center"
                        android:layout_marginTop="2dp"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:textColor="#5E5A5A"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_gravity="start|center"
                        android:layout_marginTop="2dp"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:textColor="#5E5A5A"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="end|bottom"
                    android:gravity="end">

                    <ImageView
                        android:id="@+id/iv_tap_for_more_post_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_arrow_forward_24"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:layout_marginStart="4dp"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/tv_delete_invisible_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delete"
                            android:textSize="12sp"
                            android:textColor="@color/colorPrimaryText"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="2dp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/tv_likes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:layout_marginEnd="4dp"
                            android:layout_marginTop="2dp"
                            android:visibility="gone"
                            android:textSize="12sp"
                            android:textColor="@color/black"/>

                        <ImageButton
                            android:id="@+id/ib_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/thumb_like"
                            android:layout_gravity="start|center"
                            android:layout_marginEnd="20dp"
                            android:background="@color/white"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/tv_goto_comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comments"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>